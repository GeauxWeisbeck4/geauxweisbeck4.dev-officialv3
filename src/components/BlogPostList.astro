---
interface BlogPost {
  id: number;
  title: string;
  date: string;
  slug: string;
}

const blogPosts: BlogPost[] = [
  { id: 1, title: "Getting Started with Astro", date: "2023-08-01", slug: "getting-started-with-astro" },
  { id: 2, title: "Advanced TypeScript Techniques", date: "2023-08-05", slug: "advanced-typescript-techniques" },
  { id: 3, title: "Building Responsive Layouts with Tailwind CSS", date: "2023-08-10", slug: "building-responsive-layouts-with-tailwind" },
  { id: 4, title: "State Management in React with Redux", date: "2023-08-15", slug: "state-management-in-react-with-redux" },
  { id: 5, title: "Optimizing Astro Performance", date: "2023-08-20", slug: "optimizing-astro-performance" },
  { id: 6, title: "Introduction to Next.js", date: "2023-08-25", slug: "introduction-to-nextjs" },
  { id: 7, title: "CSS-in-JS: Styled Components vs. Emotion", date: "2023-08-30", slug: "css-in-js-styled-components-vs-emotion" },
  { id: 8, title: "GraphQL vs. REST: Choosing the Right API", date: "2023-09-04", slug: "graphql-vs-rest-choosing-the-right-api" },
  { id: 9, title: "Accessibility in Web Development", date: "2023-09-09", slug: "accessibility-in-web-development" },
  { id: 10, title: "Serverless Architecture with AWS Lambda", date: "2023-09-14", slug: "serverless-architecture-with-aws-lambda" },
];
---

<section class="py-12">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-8 text-center text-gray-800">Recent Blog Posts</h2>
    <ul class="max-w-3xl mx-auto">
      {blogPosts.map((post) => (
        <li class="rounded-lg px-4 py-1 flex justify-between items-center">
          <a
            href={`/blog/${post.slug}`}
            class="text-lg font-bold text-blue-600 hover:text-blue-800 transition-colors duration-200"
          >
            {post.title}
          </a>
          <span class="text-sm text-gray-500">{post.date}</span>
        </li>
      ))}
    </ul>
  </div>
</section>
